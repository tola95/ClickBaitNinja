{
  "manifest_version": 2,

  "name": "Clickbait Ninja",
  "description": "This extension shows a popup of the current link being hovered over",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "content_scripts": [
    {
      "matches": ["http://*/*"],
      "css": ["ninja.css"],
      "js": ["jquery-3.1.1.js", "ninja.js"]
    }
  ],

  "web_accessible_resources": [
    "overlay.html"
  ]
}
